<% include ../partials/header.html %>


<h1 style="margin: 20px  auto; text-align: center;">
	edit <%= leader.username %>
</h1>

<div style="margin: auto" class="container">
	<div class="row">
		<div style="width: 40%; margin: 10px auto;">	
			<form action="/leaders/<%= leader._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value=<%= leader.username %>>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" value=<%= leader.image %>>	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" value=<%= leader.description %>>	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="followers" value=<%= leader.followers %>>	
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block btn-lg btn-default"> submit </button>	
				</div>
			</form>		
			<a href="/leaders">check out the rest of our leaders</a>
			<% include ../partials/footer.html %>
		</div>	
	</div>
</div>

