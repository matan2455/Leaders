<% include ../partials/header.html %>

<div class="container">
	<div class="row" style="padding: 2%">
		<div class="jumbotron" style="text-align: center; border: 2px solid red">
			<h1>meet the leader</h1>
		</div>
			<div class="col-xs-3">
				<p class="lead">LEADERS</p>
				<div class="list-group">
					<li class="list-group-item active">info 1</li>
					<li class="list-group-item">info 2</li>
					<li class="list-group-item">info 3</li>
				</div>
			</div>
		<div class="col-xs-9">
			<div class="thumbnail" style:"padding: 9px;">
				<img class="picture image-responsive" src="<%= leader.image %>">
				<div class="caption-full">
					<a><h4><%= leader.username %></h4></a>
					<p>	<%= leader.description %></p>
						<% if (currentUser && leader.author.id.equals(currentUser._id)){ %>
							<a href="/leaders/<%= leader._id %>/edit" type="button" class="btn  btn-outline btn-xs btn-warning">edit</a>
							<form class="delete-form" action="/leaders/<%= leader._id%>?_method=DELETE" method="POST">
								<button class="btn btn-primary btn-xs btn-danger"> delete </button>	
							</form>
						<% } %>
				</div>
			</div>
			
		<div class="well">
				<div class="row">
					<div class="col-md-12">
						<% leader.hashtags.forEach((hashtag) => { %>
							<strong class="pull-left"> #<%= hashtag.title %></strong>
						<% }); %>
						<% leader.comments.forEach((comment) => { %>
						
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
								<p><%= comment.text %></p>     
									<% if (currentUser && comment.author.id.equals(currentUser._id)){ %>
										<div class="buttonsUnderText">
											<a class="btn btn-xs btn-warning" 
												href="/leaders/<%= leader._id %>/comments/<%= comment._id %>/edit" >edit</a>
											<form  action="/leaders/<%=leader._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" class="delete-form">
												<input type="submit" class="btn btn-xs btn-danger" value="DELETE">
											</form>
										</div>
									<% } %>
						<% }); %>
					</div>
					<div class="text-right">
						<a href="/leaders/<%= leader._id %>/comments/new" type="button" class="btn btn-success">Add New Comment</a>
						<a href="/leaders" type="button" class="btn btn-outline btn-success">back to leaders</a>
					</div>
				</div>
			</div>
		</div>
	<div class="container" style:"text-align: center; background: red;">
			<div class='list'>
			
			</ul>
		
			
		</div>
	</div>
</div>

<% include ../partials/footer.html %>